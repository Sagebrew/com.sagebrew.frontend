<form {{action 'save' on='submit'}}>
  <div class="form-group">
    <label for="title">Tile</label>
    {{input  value=title id="title" type="text" class="form-control validate" }}
  </div>

  <div class="form-group">
    <label for="content">Content</label>
    {{textarea value=content class="form-control" rows="6"}}
  </div>

  <div class="form-group">
    <label for="tags">Tags</label>
    {{input  value=tags id="tags" type="text" class="form-control validate" }}
  </div>

  <button type="submit" class="btn btn-primary">Save</button>
</form>
